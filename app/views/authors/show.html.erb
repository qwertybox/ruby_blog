<h1><%= @author.name %></h1>

<p><%= @author.bio %></p>
<p>All authors articles</p>
<ul>
  <% @articles.each do |article| %>
    <li><%= link_to article.title, article %></li>
  <% end %>
</ul>

<li><%= link_to "Destroy", authors_path(@author),
                method: :delete,
                data: { confirm: "Are you sure?" } %></li>

<li><%= link_to 'Back', :back %></li>
<li><%= link_to "All Authors", authors_path %></li>
