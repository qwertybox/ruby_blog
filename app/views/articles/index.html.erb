<h1>Articles</h1>

<ul>
  <% @articles.each do |article| %>
    <hr>
    <li data-id="<%= article.id %>">
      <%= link_to article.title, article %> <!-- helper link_to создает ссылку с первым аргументом в качестве текста ссылки и вторым аргументом в качестве адреса ссылки -->
    </li>
    <div>likes: <%= content_tag(:span, article.likes, id: "l_#{article.id}") %></div>
    <div>visits: <%= content_tag(:span, article.visits, id: "v_#{article.id}") %></div>
    <hr>
  <% end %>
</ul>

<li><%= link_to "New Article", new_article_path %></li>
<li><%= link_to "All authors", authors_path %></li>
<button id="button">Refresh values</button>
<%= button_to "Generate Activity", '/generate' %>
<%= javascript_pack_tag 'function1'%>