<%= form_with model: article do |form| %>  <!-- here we use local var article, evr tha same as new-->
  <!--we will use shared view (partials) form-with - read!!-->
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
    <% article.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :body %><br>
    <%= form.text_area :body %><br>
    <% article.errors.full_messages_for(:body).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :author %><br>
    <%= form.collection_select :author_id, Author.all, :id, :name, {:prompt => 'Please select the author of this article'} %>
    <% article.errors.full_messages_for(:author).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>

<%= link_to "All Articles", articles_path %> <!--_url _path-->